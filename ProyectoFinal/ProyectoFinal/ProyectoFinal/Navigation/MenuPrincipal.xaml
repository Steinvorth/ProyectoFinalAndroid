<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Navigation.MenuPrincipal">


    <StackLayout VerticalOptions="FillAndExpand">

        <!-- Top Bar -->
        <StackLayout Orientation="Horizontal" HeightRequest="50" BackgroundColor="LightGray">
            <Button Text="Ayuda" HorizontalOptions="StartAndExpand" x:Name="help"/>
        </StackLayout>

        <!-- Content Area -->
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">

            <!-- Button for Carnes -->
            <Button Text="Carnes" Margin="0,0,0,10" x:Name="carnes"/>

            <!-- Button for Comidas Congeladas -->
            <Button Text="Comidas Congeladas" Margin="0,0,0,10" x:Name="comida_cong"/>

            <!-- Button for LogOut -->
            <Button Text="LogOut" x:Name="log_out" />

        </StackLayout>

    </StackLayout>
    
    
</ContentPage>