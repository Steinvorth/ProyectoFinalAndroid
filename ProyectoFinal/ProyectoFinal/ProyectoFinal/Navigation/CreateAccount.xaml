<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Navigation.CreateAccount">
    
    <ContentPage.Content>
        
        <StackLayout Padding="20">
            <Label Text="Create an Account" FontSize="Title" HorizontalOptions="Center" Margin="0,20,0,10" />

            <Entry Placeholder="Nombre" x:Name="NombreEntry" Margin="0,0,0,10" />
            <Entry Placeholder="Apellido" x:Name="ApellidoEntry" Margin="0,0,0,10" />
            <Entry Placeholder="Usuario" x:Name="UsuarioEntry" Margin="0,0,0,10" />
            <Entry Placeholder="Número Tel" x:Name="NumTelEntry" Margin="0,0,0,10" />
            <Entry Placeholder="Password" IsPassword="True" x:Name="PassEntry" Margin="0,0,0,10" />

            <Button Text="Create Account" HorizontalOptions="FillAndExpand" x:Name="createAcc_btn"/>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>