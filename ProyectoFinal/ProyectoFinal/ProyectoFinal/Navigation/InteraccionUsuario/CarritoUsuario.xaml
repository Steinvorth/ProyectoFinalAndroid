<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Navigation.InteraccionUsuario.CarritoUsuario">

    <StackLayout>
        <ListView x:Name="listView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>

                        <!--Hay que ajustar lo del espacio-->
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Nombre}" />
                            <Label Text="{Binding Cantidad}" />
                            <Label Text="{Binding Precio_Unitario}" />
                            <Label Text="{Binding Subtotal}" />


                            <Button Text="Delete" Clicked="borrar_item" CommandParameter="{Binding ProductoId}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label Text="" x:Name="lbl_totalCompra"/>
        <Button Text="Comprar" x:Name="comprar_btn"/>
        <Button Text="Eliminar carrito" x:Name="btn_eliminarCarrito"/>

    </StackLayout>

</ContentPage>