<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.MainPage">

        <StackLayout Spacing="10" Padding="30, 50, 30, 50">
            <Label Text="Login" FontAttributes="Bold" FontSize="28" />

            <!-- Email Entry -->
            <Entry x:Name="user_entry" Placeholder="Email Address" Keyboard="Email" ReturnType="Done" VerticalOptions="CenterAndExpand"/>

            <!-- Password Entry -->
            <Entry x:Name="pass_entry" IsPassword="True" Placeholder="Password" ReturnType="Done" VerticalOptions="CenterAndExpand"/>

            <!-- Log In Button -->
            <Button Text="Log In" HorizontalOptions="Center" Margin="0, 50, 0, 0" x:Name="login_btn"/>
        </StackLayout>

</ContentPage>
